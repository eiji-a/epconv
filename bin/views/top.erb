<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Required meta tags always come first -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="x-ua-compatible" content="ie=edge">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/css/bootstrap.min.css">

  <title>BEAUTY PICS: Magazine</title>
</head>
<body>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button class="navbar-toggle" data-toggle="collapse" data-target="#mainNav">
          <span class="sr-only">navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="/top/n/1/all" class="navbar-brand">BEAUTY PICS: Magazine</a>
      </div>
      <div class="collapse navbar-collapse" id="mainNav">
      <ul class="nav navbar-nav navbar-right">
        <% if @filter == 'all' %>
        <li class="nav-item active">
        <% else %>
        <li class="nav-item">
        <% end %>
          <a href="/top/<%= @st %>/<%= @pg %>/all" class="nav-link">all</a>
        </li>
        <% ['filed', 'sketch', 'excepted', 'suspended'].each do |k| %>
        <% if @filter == k %>
        <li class="nav-item active">
          <a href="/top/<%= @st %>/<%= @pg %>/<%= k %>" class="nav-link">
            <%= k %>
          </a>
        </li>
        <% else  %>
        <li class="nav-item">
          <a href="/top/<%= @st %>/1/<%= k %>" class="nav-link"><%= k %></a>
        </li>
        <% end %>
        <% end %>
      </ul>
      </div>
    </div>
  </nav>
  
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-2">
        <div class="list-group">
          <% @tags.each do |v| %>
          <a href="" class="list-group-item"><%= v[0] %>
            <span class="badge"><%= v[1] %></span>
          </a>
          <% end %>
        </div>
      </div>
      <div class="col-xs-10">
        <div class="table-responsive">
          <table class="table">
            <% lcnt = 0 %>
            <% @displist.each do |d| %>
            <% if lcnt % LINEIMG == 0 %>
            <tr>
              <% end %>
              <% bn = File.basename(d[0]) %>
              <% /emags-(.+)-.+\.jpg/ =~ d[0] %>
              <% hs = $1 %>
              <td valign="top">
                <div class="media">
                <div class="btn-group btn-group-xs" role="group" aria-label="change">
                  <% STBTN.each_key do |k| %>
                    <% if k == ST_SKETCH %>
                    <%   icon="pencil" %>
                    <% elsif k == ST_FILE %>
                    <%   icon="folder-open" %>
                    <% elsif k == ST_EXCEPT %>
                    <%   icon="remove" %>
                    <% end %>
                    <% if k != d[1] %>
                    <%   btnst="" %>
                    <%   lnk="/change/#{@st}/#{@pg}/#{@filter}/maglist/#{d[2]}/#{k}" %>
                    <% else %>
                    <%   btnst=" disabled" %>
                    <%   lnk="" %>
                    <% end %>
                  <button type="button" class="btn btn-default<%= btnst %>">
                    <a href="<%= lnk %>">
                      <span class="glyphicon glyphicon-<%= icon %>"
                            aria-hidden="true">
                      </span>
                    </a>
                  </button>
                <% end %>
                </div>
                <a href="/mag/<%= @st %>/<%= @pg %>/<%= @filter %>/<%= d[2] %>/0">
                  <img src="/image/<%= bn %>/" width="200px" class="img-responsive img-rounded">
                </a>
                </div>
              </td>
              <% if lcnt % LINEIMG == LINEIMG - 1 %>
            </tr>
            <% end %>
            <% lcnt += 1 %>
            <% end %>
          </table>
        </div>
  
        <div class="text-center">
          <ul class="pagination">
            <li>
              <% if @pg <= 1 then pg=1 else pg=@pg-1 end %>
                 <a class="page-link" href="/top/<%= @st %>/<%= pg %>/<%= @filter %>" aria-label="Previous">
                   <span aria-hidden="true">&laquo;</span>
                   <span class="sr-only">Previous</span>
                 </a>
            </li>
            <li class="active">
              <a class="page-link" href="/top/<%= @st %>/1/<%= @filter %>">1</a>
            </li>
            <li><a class="page-link" href="">..</a></li>
            <li>
              <a class="page-link" href="/top/<%= @st %>/<%= @listsize / NIMGPAGE %>/<%= @filter %>">
                <%= @listsize / NIMGPAGE %>
              </a>
            </li>
            <li>
              <% if @pg * NIMGPAGE < @listsize %>
                 <a class="page-link" href="/top/<%= @st %>/<%= @pg + 1 %>/<%= @filter %>" aria-label="Next">
                   <span aria-hidden="true">&raquo;</span>
                   <span class="sr-only">Next</span>
                 </a>
              <% else %>
                 <a class="page-link" href="" aria-label="Next">
                   <span aria-hidden="true">&raquo;</span>
                   <span class="sr-only">Next</span>
                 </a>
              <% end %>
            </li>
          </ul>
        </div>

      </div>
    </div>
  </div>
  
  <!-- jQuery first, then Tether, then Bootstrap JS. -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
</body>
</html>
