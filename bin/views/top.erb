<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Required meta tags always come first -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="x-ua-compatible" content="ie=edge">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/css/bootstrap.min.css">

  <title>BEAUTY PICS: INDEX</title>
</head>
<body>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a href="/top/n/1/all" class="navbar-brand">BEAUTY PICS: INDEX</a>
      </div>
      <ul class="nav navbar-nav">
        <% if @filter == 'all' %>
        <li class="nav-item active">
        <% else %>
        <li class="nav-item">
        <% end %>
          <a href="/top/<%= @st %>/<%= @pg %>/all" class="nav-link">all</a>
        </li>
        <% TYPE.each_key do |k| %>
        <% if @filter == k %>
        <li class="nav-item active">
          <a href="/top/<%= @st %>/<%= @pg %>/<%= k %>" class="nav-link">
            <%= k %>
          </a>
        </li>
        <% elsif k == FL_DEL %>
        <li class="nav-item">
          <a href="/top/<%= @st %>/1/<%= k %>" class="nav-link"><%= k %></a>
        </li>
        <% else  %>
        <li class="nav-item">
          <a href="/top/<%= @st %>/1/<%= k %>" class="nav-link"><%= k %></a>
        </li>
        <% end %>
        <% end %>
      </ul>
    </div>
  </nav>
  
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-2">
        
      </div>
      <div class="col-xs-10">
        <div class="text-center">
          <ul class="pagination">
            <li>
              <% if @pg <= 1 then pg=1 else pg=@pg-1 end %>
                 <a class="page-link" href="/top/<%= @st %>/<%= pg %>/<%= @filter %>" aria-label="Previous">
                   <span aria-hidden="true">&laquo;</span>
                   <span class="sr-only">Previous</span>
                 </a>
            </li>
            <li class="active">
              <a class="page-link" href="/top/<%= @st %>/1/<%= @filter %>">1</a>
            </li>
            <li><a class="page-link" href="">..</a></li>
            <li>
              <a class="page-link" href="/top/<%= @st %>/<%= @listsize / NIMGPAGE + 1 %>/<%= @filter %>">
                <%= @listsize / NIMGPAGE + 1 %>
              </a>
            </li>
            <li>
              <% if @pg * NIMGPAGE < @listsize %>
                 <a class="page-link" href="/top/<%= @st %>/<%= @pg + 1 %>/<%= @filter %>" aria-label="Next">
                   <span aria-hidden="true">&raquo;</span>
                   <span class="sr-only">Next</span>
                 </a>
              <% else %>
                 <a class="page-link" href="" aria-label="Next">
                   <span aria-hidden="true">&raquo;</span>
                   <span class="sr-only">Next</span>
                 </a>
              <% end %>
            </li>
          </ul>
        </div>

        <div class="table-responsive">
          <table class="table">
            <% lcnt = 0 %>
            <% @displist.each do |d| %>
            <% if lcnt % LINEIMG == 0 %>
            <tr>
              <% end %>
              <% bn = File.basename(d[0]) %>
              <% /emags-(.+)-index\.jpg/ =~ d[0] %>
              <% hs = $1 %>
              <td valign="top">
                <% TYPE.each_key do |k| %>
                <%   if k != d[1] %>
                <a href="/change/<%= @st %>/<%= @pg %>/<%= @filter %>/<%= hs %>/0000/<%= k %>">
                <%   end %>
                <% if k == 'forsketch' %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true">
                </span>
                <% elsif k == 'notevaluated' %>
                <span class="glyphicon glyphicon-inbox" aria-hidden="true">
                </span>
                <% elsif k == 'filed' %>
                <span class="glyphicon glyphicon-folder-open" aria-hidden="true">
                </span>
                <% end %>
                <%   if k != d[1] %>
                </a>
                <%   end %>
                <% end %>
                <a href="/mag/<%= @st %>/<%= @pg %>/<%= @filter %>/<%= hs %>/0">
                  <img src="/index/<%= bn %>" width="200px" class="img-responsive img-rounded">
                </a>
              </td>
              <% if lcnt % LINEIMG == LINEIMG - 1 %>
            </tr>
            <% end %>
            <% lcnt += 1 %>
            <% end %>
          </table>
        </div>
  
        <div class="text-center">
          <ul class="pagination">
            <li>
              <% if @pg-NIMGPAGE < 0 then pg=0 else pg=@pg-NIMGPAGE end %>
                 <a class="page-link" href="/top/<%= @st %>/<%= pg %>/<%= @filter %>" aria-label="Previous">
                   <span aria-hidden="true">&laquo;</span>
                   <span class="sr-only">Previous</span>
                 </a>
            </li>
            <li>
              <a class="page-link" href="/top/<%= @st %>/0/<%= @filter %>">1</a>
            </li>
            <li><a class="page-link" href="">..</a></li>
            <li>
              <a class="page-link" href="/top/<%= @st %>/<%= ((@listsize - 1)/NIMGPAGE) * NIMGPAGE %>/<%= @filter %>">
                <%= @listsize / NIMGPAGE + 1 %>
              </a>
            </li>
            <li>
              <% if @pg + NIMGPAGE < @listsize %>
                 <a class="page-link" href="/top/<%= @st %>/<%= @pg + NIMGPAGE %>/<%= @filter %>" aria-label="Next">
                   <span aria-hidden="true">&raquo;</span>
                   <span class="sr-only">Next</span>
                 </a>
                 <% else %>
                 <a class="page-link" href="" aria-label="Next">
                   <span aria-hidden="true">&raquo;</span>
                   <span class="sr-only">Next</span>
                 </a>
                 <% end %>
            </li>
          </ul>
        </div>

      </div>
    </div>
  </div>
  
  <!-- jQuery first, then Tether, then Bootstrap JS. -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
</body>
</html>
